<div class="row">

  <div class="col-md-8 col-md-offset-1">
    <h3>
      <center>
        <%= link_to "#{@article.title}", user_article_path(id: @article.id) %>
      </center>
    </h3>

    <br>
    <br>
      <%= markdown @article.text %>
    <br>
    <br>
    <br>
    <br>

    <section class="user_info">
      <ol class="microposts">
        <li id="micropost-<%= @article.id %>">
          <%= link_to gravatar_for(@article.user, size: 50), @article.user %>
          <span class="timestamp">
            <h4><%= "#{@article.user.name}" %></h4>
              发表于 <%= time_ago_in_words(@article.created_at) %> 前啦
            <% if logged_in? == true && current_user == @article.user %>
              <%= link_to "修改", edit_user_article_path(id: @article.id) %>
              <%= link_to '删除', user_article_path(id: @article.id), method: :delete,
                data: { confirm: '真的要删吗?' } %></span>
            <% end %>         
        </li>
  
        <li id="micropost-<%= @article.id %>">
          个人说明（待补充）
        </li>
      </ol>
    </section>

  </div>

</div>



